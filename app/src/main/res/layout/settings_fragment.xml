<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="50dp">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/round"/>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/square"
        android:inputType="textAutoComplete"
        android:padding="10dp"
        android:hint="Username"
        android:layout_marginLeft="80dp" android:layout_marginRight="80dp"/>
    <EditText
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_height="50dp"
        android:background="@drawable/square"
        android:layout_marginLeft="80dp" android:layout_marginRight="80dp"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp" android:layout_marginRight="80dp">
        <TextView
            android:text="For got password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal|right"
            android:text="Login"
            android:background="@drawable/square"
            android:layout_width="80dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_height="30dp" />
        </FrameLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:text="Login with facebook"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:id="@+id/loginFB"
        android:layout_marginLeft="80dp" android:layout_marginRight="80dp"
        android:background="@drawable/rounded_border_black"
        android:layout_height="40dp" />
    <TextView
        android:layout_marginTop="30dp"
        android:text="Signup"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_marginLeft="80dp" android:layout_marginRight="80dp"
        android:background="@drawable/square"
        android:layout_height="40dp" />
    <TextView
        android:layout_marginTop="30dp"
        android:text="Skip login"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:textColor="#999"
        android:layout_marginLeft="80dp" android:layout_marginRight="80dp"
        android:background="@drawable/rounded_border_white"
        android:layout_height="40dp" />
</LinearLayout>